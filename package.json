{
  "name": "@nextcloud/paths",
  "version": "2.3.0",
  "description": "Helper functions for working with paths in Nextcloud apps",
  "keywords": [
    "nextcloud",
    "paths"
  ],
  "homepage": "https://github.com/nextcloud-libraries/nextcloud-paths#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextcloud-libraries/nextcloud-paths"
  },
  "license": "GPL-3.0-or-later",
  "author": "Nextcloud GmbH and Nextcloud contributors",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "AUTHORS.md",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite --mode production build",
    "build:doc": "typedoc --out dist/doc lib/index.ts && touch dist/doc/.nojekyll",
    "dev": "vite --mode development build --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "devDependencies": {
    "@nextcloud/browserslist-config": "^3.1.1",
    "@nextcloud/vite-config": "^2.5.2",
    "@vitest/coverage-v8": "^4.0.7",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^7.2.1",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": "^20.0.0 || ^22.0.0 || ^24.0.0"
  },
  "devEngines": {
    "packageManager": [{
      "name": "npm",
      "version": "^11.3.0",
      "onFail": "error"
    }],
    "runtime": {
      "name": "node",
      "version": "^24.0.0",
      "onFail": "error"
    }
  }
}
