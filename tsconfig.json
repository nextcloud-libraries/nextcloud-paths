{
	"include": ["lib"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "lib",
		"strict": true,
		"allowImportingTsExtensions": true,
		"erasableSyntaxOnly": true,
		"rewriteRelativeImportExtensions": true,
		"lib": [
			"es6",
			"dom"
		],
	}
}